
@{
    ViewBag.Title = "Үзвэрийн танхимууд";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    @using (Html.BeginForm())
    {
        <h2 class="sub-header"></h2>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Танхимын нэр</th>
                        <th>Сандалын тоо</th>
                        <th>Салбарын Нэр</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].H_ID</td>
                            <td>@Model[i].H_Name</td>
                            <td>@Model[i].H_SeatNumbers</td>
                            <td>@Model[i].Branch.B_Name</td>
                            <td><a href="@Url.Action("DeleteHall","Manager",new { id=Model[i].H_ID })">Устгах</a> | <a href="@Url.Action("UpdateHall", "Manager", new { id = Model[i].H_ID })">Засах</a> | <a href="@Url.Action("SearchHall", "Manager", new { id = Model[i].H_ID })">Хайх</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
